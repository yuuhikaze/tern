import { ListView, Button, LineEdit, ComboBox, TabWidget, TextEdit, GroupBox } from "std-widgets.slint";

import { LeftPanel } from "components/left-panel.slint";
import { RightPanel } from "components/right-panel.slint";
import { Backend } from "backend.slint";

export { Backend }

component DebugInfo inherits VerticalLayout {
    alignment: start;
    Text {
        text: Backend.save-signal ? "True" : "False";
    }

    Text {
        text: Backend.engine;
    }

    Text {
        text: Backend.source-path;
    }

    Text {
        text: Backend.options;
    }

    Text {
        text: Backend.ignore-patterns;
    }
}

export component AppWindow inherits Window {
    preferred-width: 900px;
    preferred-height: 600px;
    property <bool> rpanel-interactable: Backend.rpanel-interactable;
    HorizontalLayout {
        lpanel := LeftPanel {
            min-width: 250px;
        }

        DebugInfo { }

        rpanel := RightPanel {
            visible: rpanel-interactable;
            horizontal-stretch: 1;
        }
    }
}
